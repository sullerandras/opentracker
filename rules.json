{
  "rules": {
    ".read": "auth.email == 'suller.andras@gmail.com'",
    ".write": "auth.email == 'suller.andras@gmail.com'",
    "users": {
      "$user": {
        ".read": "$user == auth.username",
        ".write": "$user == auth.username"
      }
    },
    "projects": {
      "$project": {
        ".read":  "auth.email != ''",
        ".write": "!data.exists() || auth.email == newData.child('creator_email').val()"
      }
    }
  }
}
